<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>N E W V E R Y</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon">
            </button>

    <div class="container"style="color: gray;">
      <a>N E W V E R Y</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent" >
        <ul class="navbar-nav ml-auto">

      <% if user_signed_in? %>




              <%= link_to posts_path do %>
                <span class="fas fa-images nav-link text-dark" aria-hidden="true">POST</span>

              <% end %>
            </li>

            <li>
              <%= link_to new_post_path do%>
                <span class="fas fa-camera-retro nav-link text-dark" aria-hidden="true">NEW</span>
              <% end %>
            </li>

            <li>
              <%= link_to user_path(current_user.id) do %>
                <span class="fas fa-user nav-link text-dark" aria-hidden="true">MYPAGE</span>
              <% end %>
            </li>


            <li>
              <%= link_to destroy_user_session_path, method: :delete do%>
                <span class="fas fa-sign-out-alt nav-link text-dark" aria-hidden="true">LOGOUT</span>
              <% end %>
              </li>



          <% else %>

            <li>
              <%= link_to top_about_path do%>
                <span class="fas fa-link nav-link text-dark" aria-hidden="true">About</span>

              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do%>
                <span class="fas fa-user-plus nav-link text-dark" aria-hidden="true">Sing up</span>

              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do%><span class="fas fa-sign-in-alt nav-link text-dark" aria-hidden="true">Log in</span>

            <% end %>
            </li>



          <% end %>

          </ul>
      </div>
    </div>
  </nav>
  </header>

  <body>
   <% if flash[:notice] %>
      <p class="success"><%= flash[:notice] %></p>
    <% end %>



    <%= yield %>
    </body>


</html>









