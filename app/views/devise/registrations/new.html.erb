<div class="inview2" >
<div class="container" >
   <div class="row-center"style="color: white; " >
     <div class="col-md-6 mx-auto" >

<h2>SING UP</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true,size:50 %>
  </div>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",size:50 %>
  </div>

  <div class="field">
    <%= f.label :Password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",size:50 %>
  </div>

  <div class="field">
    <%= f.label :Password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",size:50 %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-outline-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

   </div>

</div>

 </div>
 </div>

 </div>


