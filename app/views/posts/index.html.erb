


<div class="card-list-containar py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :post_image %>

    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post.user, :profile_image_id, :fill, 60, 60, fallback: "no-image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>

            <% end %>
          </p>
          <p class="card-text">TEXT：<%= post.text %></p>
          <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
          <span><%= link_to "#{post.post_comments.count} comment", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>


