<div class="card-list-containar py-5 container">
  <div class="row">
    <div class="col-xs">
      <% @posts.each do |post| %>
        <div class="card w-75 mx-auto mt-5 shadow-lg">
          <%= link_to post_path(post.id) do %>
            <% if post.post_images.present? %>
              <% post.post_images.first(1).each do |image| %>
                <%= attachment_image_tag image, :image, class: "card-img-top" %>
            <% end %>
            <% else %>
            画像はありません。
            <% end %>
      <% end %>

<div class="card-body">
  <div class="row">
    <div class="col-12-lg">
      <%= attachment_image_tag post.user, :profile_image, :fill, 100, 100, fallback: "no-image.jpg", class:"mt-3 rounded-circle"; %>
    </div>
      <div class="col-10">
        <p class="card-title"></p>
          <p class="card-text">TEXT：<%= post.text %></p>
            <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>

               <span><%= link_to "#{post.post_comments.count} comment", post_path(post.id), class:"text-dark" %></span>
            <span><%= link_to "#{post.favorites.count} favorite", post_path(post.id), class:"text-dark" %></span>



      </div>
  </div>
</div>
        </div>
<% end %>
</div>
</div>





