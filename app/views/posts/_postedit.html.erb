<div class="info">
  <div class="container my-4">
   <div class="row">
     <div class="col">
    <div class="post_pic" >
      <div id="carouselExampleControls" class="carousel slide my-4" data-ride="carousel" data-interval="false">
        <div class="carousel-inner" style="text-align: center">
           <% @post.post_images.first(1).each do |image| %>
             <div class="carousel-item active">
                <%= attachment_image_tag image, :image, :fill, 500, 400, class: "carousel_image" %>
            </div>
           <% end %>
              <% @post.post_images.drop(1).each do |image| %>
                <div class="carousel-item">
                   <%= attachment_image_tag image, :image, :fill, 500, 400, class: "carousel_image" %>
                </div>
              <% end %>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-botton-custom">&lt;</span>
                  <!--<span class="carousel-control-prev-icon" aria-hidden="false"></span>-->
                  <!--<span class="sr-only">Previous</span>-->
                </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-botton-custom">&gt;</span>
                      <!--<span class="carousel-control-next-icon" aria-hidden="false"></span>-->
                      <!--<span class="sr-only">Next</span>-->
                  </a>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>

<div class="col-sm">
  <div class="row border-bottom my-5ã€€d-flex align-items-end">
    <div class="col-md-2 col-12"><%= attachment_image_tag @post.user, :profile_image, :fill, 70, 70, fallback: "no-image.jpg", class:"mt-3 rounded-circle"; %></div>
      <div class="col-md-2 col-12"><%= link_to @post.user.name, user_path(@post.user.id) %></div>
        <div class="col-md-2 col-12"><%= @post.created_at.strftime('%Y/%m/%d') %></div>
          <div class="col-md-2 col-12"><%= @post.text %></div>
            <div class="col-md-2 col-12"><a href="#comments"><%= @post.post_comments.count %></a></div>
              <div class="col-md-2 col-12"><td id="favorite-btn_<%= @post.id %>"><%= render "favorites/favorite" , post: @post %></td></div>
  </div>
</div>
</div>
