
<div class="card-list-containar py-5">
<div class="row">
    <% @posts.each do |post| %>
      <div class="col-4">
         <div class="card mx-auto mt-4 shadow-lg">
            <%= link_to post_path(post.id) do %>
                <% if post.post_images.present? %>
                  <% post.post_images.first(1).each do |image| %>
                    <%= attachment_image_tag image, :image, class: "card-img-top" %>
                  <% end %>
                <% else %>
                  画像はありません。
                <% end %>
            <% end %>




           </div>
        </div>
      <% end %>
    </div>
 </div>
 
 
 
 
 